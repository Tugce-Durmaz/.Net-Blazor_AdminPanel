@page "/userlist"

@inherits UserListProcess
<div class="baslik">
<h3>Katılımcılar</h3>
</div>

<div class="katılımcıtablo">

@*Burda kod bloğuna ihtiyacım olmayacak sadece html kısmını kullanacağım*@

  @if (UserList != null)
    {
        <table class ="table table-hover table-sm">
            <thead>
                <tr>
                    <th scope="col">UserId</th>
                    <th scope="col">Name Surname</th>
                    <th scope="col">E-Mail Address</th>
                    <th scope="col">Situation</th>

                </tr>
            </thead>

            <tbody>

                @foreach (var user in UserList)
                {
                    String spanClass = "badge badge-pill badge-" + (user.IsActive ? "success" : "danger");
                    <tr>

                        <td>@user.UserId</td>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                       @* <td>@user.IsActive</td>*@
                        <td><span class="@spanClass"> @(user.IsActive ? "✅" : "❌") </span></td>


                    </tr>

                }
            </tbody>


        </table>
    }

                </div>


        <style>

            .baslik {
            /*font-family:monospace;*/
            font-style: italic;
            margin-left: 350px;
            position: fixed;
            top: 55px;
            }

